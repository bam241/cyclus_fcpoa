<simulation>
    
    <schematype>flat</schematype>
    <control>
        <duration>200</duration>
        <startmonth>1</startmonth>
        <startyear>2000</startyear>
        <explicit_inventory>true</explicit_inventory>
    </control>

    <archetypes>
        <spec> <lib>cycamore</lib><name>Source</name> </spec>
        <spec> <lib>cycamore</lib><name>Sink</name> </spec>
        <spec> <lib>cycamore</lib><name>Storage</name> </spec>
        <spec> <lib>mbmore</lib><name>CascadeEnrich</name> </spec>
    </archetypes>

    <facility>
        <name>mine</name>
        <config>
            <Source>
                <outcommod>nat_uranium</outcommod>
                <outrecipe>nat_u_recipe</outrecipe>
                <throughput>1000.0</throughput>
            </Source>
        </config>
    </facility>

    <facility>
        <name>LEU</name>
        <config>
            <Sink>
                <in_commods>
                    <val>enriched</val>
                </in_commods>
                <recipe_name>leu3_recipe</recipe_name>
            </Sink>
        </config>
    </facility>

    <facility>
        <name>covert_HEU</name>
        <config>
            <Sink>
                <in_commods>
                    <val>enriched</val>
                </in_commods>
                <recipe_name>heu_recipe</recipe_name>
            </Sink>
        </config>
    </facility>

    <facility>
        <name>Cascade</name>
        <config>
            <CascadeEnrich>
                <feed_commod>nat_uranium</feed_commod>
                <product_commod>enriched</product_commod>
                <tails_commod>tails</tails_commod>
                <feed_recipe>nat_u_recipe</feed_recipe>
                <design_feed_flow>739</design_feed_flow>
                <max_centrifuges>1000</max_centrifuges>
                <design_feed_assay>0.007</design_feed_assay>
                <design_product_assay>0.035</design_product_assay>
                <design_tails_assay>0.002</design_tails_assay>
            </CascadeEnrich>
        </config>
    </facility>

    <recipe>
        <name>nat_u_recipe</name>
        <basis>atom</basis>
        <nuclide> <id>922350000</id> <comp>0.0071</comp> </nuclide>
        <nuclide> <id>922380000</id> <comp>0.993</comp> </nuclide>
    </recipe>

    <recipe>
        <name>leu3_recipe</name>
        <basis>atom</basis>
        <nuclide> <id>922350000</id> <comp>0.03</comp> </nuclide>
        <nuclide> <id>922380000</id> <comp>0.97</comp> </nuclide>
    </recipe>


    <prototype>
        <name>main_deployer</name>
        <config>
            <DeployInst>
                <prototypes>
                    <val>nu_src</val>
                   
                    <val>Storage_pwr_tru</val>
                    
                    <val>storage</val>
                    <val>waste</val>
                </prototypes>

                <build_times>
                    <val>1</val>
                    
                    <val>1</val>

                    <val>1</val>
                    <val>1</val>
                </build_times>

                <n_build>
                    <val>1</val>

                    <val>1</val>

                    <val>1</val>
                    <val>1</val>
                </n_build>
            </DeployInst>
        </config>
    </prototype>


    <agent> <name>deployer_1</name> <prototype>deployer_main_CHAIN</prototype> </agent>
</simulation>
